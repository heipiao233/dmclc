{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "nodenext",
    "allowJs": true,
    "declaration": true,
    "outDir": "./lib",
    "declarationDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["./src/**/*"]
}
